<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Bienvenue!{% endblock %}</title>
    {% block stylesheets %}
    <link href="{{ asset('build/styles.css') }}" rel="stylesheet">
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>
<body class="overflow-hidden">
    <!-- Barre de navigation -->
    <nav class="bg-blue-500 shadow p-4 flex justify-between items-center">
        <div class="flex items-center">
            <svg class="h-8 w-8 text-white mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 0 0 2.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 0 0-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 0 0 .75-.75 2.25 2.25 0 0 0-.1-.664m-5.8 0A2.251 2.251 0 0 1 13.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25ZM6.75 12h.008v.008H6.75V12Zm0 3h.008v.008H6.75V15Zm0 3h.008v.008H6.75V18Z" />
            </svg>
            <h1 class="text-2xl font-bold text-white">Gestion Boutique</h1>
        </div>
        <div class="relative">
            <img src="https://via.placeholder.com/40" alt="User Photo" class="rounded-full cursor-pointer" onclick="toggleUserModal()">
        </div>
    </nav>

    <div class="flex h-screen">
        <!-- Barre latérale -->
        <aside class="w-64 bg-blue-500 text-white p-6 shadow-lg overflow-y-auto">
            <nav>
                <ul>
                    <li class="mb-4">
                        <a href="#" class="flex items-center hover:bg-blue-400 p-3 rounded-lg transition duration-200">
                            <i class="fas fa-tachometer-alt mr-3"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li class="mb-4">
                        <a href="{{ path('clients.index') }}" class="flex items-center hover:bg-blue-400 p-3 rounded-lg transition duration-200">
                            <i class="fas fa-user-friends mr-3"></i>
                            <span>Clients</span>
                        </a>
                    </li>
                    <li class="mb-4">
                        <a href="{{ path('articles.index') }}" class="flex items-center hover:bg-blue-400 p-3 rounded-lg transition duration-200">
                            <i class="fas fa-box-open mr-3"></i>
                            <span>Articles</span>
                        </a>
                    </li>
                    <li class="mb-4">
                        <a href="#" class="flex items-center hover:bg-blue-400 p-3 rounded-lg transition duration-200">
                            <i class="fas fa-shopping-cart mr-3"></i>
                            <span>Commandes</span>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="flex items-center hover:bg-blue-400 p-3 rounded-lg transition duration-200">
                            <i class="fas fa-cogs mr-3"></i>
                            <span>Paramètres</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>

        <!-- Contenu principal -->
        <div class="flex-1 p-6 overflow-y-auto">
            {% block body %}{% endblock %}
        </div>
    </div>

    {% block scripts %}
    <script>
        function toggleDeleteModal() {
            document.getElementById('deleteModal').classList.toggle('hidden');
        }

        function closeModal() {
            document.getElementById('deleteModal').classList.add('hidden');
        }

        function confirmDelete() {
            // Logic to delete the client
            closeModal();
        }
    </script>
    {% endblock %}
</body>
</html>
