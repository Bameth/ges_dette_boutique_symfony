{% extends 'base.html.twig' %}

{% block title %}Gestion des Clients{% endblock %}

{% block body %}
<div class="bg-gradient-to-br from-gray-50 to-gray-100 min-h-screen py-6">
    <div class="max-w-7xl mx-auto bg-white shadow-2xl rounded-xl p-8">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-4xl font-extrabold text-gray-800">Liste des Dettes</h1>
            <a href="{{ path('dettes.store') }}"
               class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-green-500 to-green-700 text-white rounded-lg shadow-lg hover:shadow-xl transition-transform transform hover:scale-105">
                Nouveau
                <svg class="h-6 w-6 ml-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
            </a>
        </div>

        {# <div class="mb-6">
            {{ form_start(formSearch, {'attr': {'class': 'flex items-center bg-gray-200 p-4 rounded-lg shadow-inner'}}) }}
            <div class="flex-grow mr-4">
                <div class="relative">
                    {{ form_row(formSearch.telephone, {
                        'attr': {
                            'placeholder': 'Rechercher par téléphone...',
                            'class': 'border border-gray-300 rounded-lg pl-12 pr-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 w-full'
                        }
                    }) }}
                    <span class="absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400">
                        <i class="fas fa-phone-alt mt-7"></i>
                    </span>
                </div>
            </div>
            <button type="submit" class="px-6 py-3 bg-blue-600 text-white rounded-lg shadow-lg hover:bg-blue-700 transition-colors mt-5">
                <i class="fas fa-search mr-2"></i> Rechercher
            </button>
            {{ form_end(formSearch) }}
        </div> #}


        <div class="overflow-x-auto">
            <table class="min-w-full table-auto bg-white rounded-xl shadow-lg">
                <thead class="bg-gradient-to-r from-blue-600 to-blue-800 text-white uppercase">
                    <tr>
                        <th class="px-6 py-3 text-center text-sm font-bold tracking-wider">#</th>
                        <th class="px-6 py-3 text-center text-sm font-bold tracking-wider">MONTANT</th>
                        <th class="px-6 py-3 text-center text-sm font-bold tracking-wider">MONTANT VERSER</th>
                        <th class="px-6 py-3 text-center text-sm font-bold tracking-wider">NOM CLIENT</th>
                        <th class="px-6 py-3 text-left text-sm font-bold tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="text-gray-700">
                {% for dette in datas %}
                    <tr class="hover:bg-gray-50 transition duration-200">
                        <td class="px-6 py-4 text-center">{{ loop.index }}</td>
                        <td class="px-6 py-4 text-center">{{ dette.montant }}</td>
                        <td class="px-6 py-4 text-center">{{ dette.montantVerser }}</td>
                        <td class="px-6 py-4 text-center">{{ dette.client.user.nom }}</td>
                        <td class="px-6 py-4 flex space-x-4">
                            <a href="" class="text-blue-600 hover:text-blue-800 transition">
                                <i class="fas fa-eye"></i>
                            </a>
                            <button class="text-red-600 hover:text-red-800 transition" onclick="toggleDeleteModal()">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="px-6 py-4 text-center text-gray-500">Aucun client trouvé.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="flex justify-center mt-6">
            {% for i in 1..maxPage %}
                <a href="{{ path('dettes.index', {'page': i}) }}"
                   class="mx-1 px-4 py-2 border border-gray-300 bg-white text-gray-600 rounded-lg hover:bg-gray-200 transition {{ i == currentPage ? 'bg-blue-100' : '' }}">
                    {{ i }}
                </a>
            {% endfor %}
        </div>

        <!-- Modal de confirmation de suppression -->
        <div id="deleteModal" class="fixed inset-0 z-50 flex items-center justify-center hidden">
            <div class="fixed inset-0 bg-gray-800 bg-opacity-75"></div>
            <div class="bg-white rounded-lg overflow-hidden shadow-xl transform transition-all max-w-lg w-full">
                <div class="px-6 py-4">
                    <h3 class="text-lg font-bold">Supprimer le client</h3>
                    <p class="text-gray-600 mt-2">Êtes-vous sûr de vouloir supprimer ce client ? Cette action est irréversible.</p>
                </div>
                <div class="px-6 py-4 bg-gray-50 flex justify-end space-x-3">
                    <button class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition" onclick="confirmDelete()">Supprimer</button>
                    <button class="bg-gray-300 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-400 transition" onclick="toggleDeleteModal()">Annuler</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function toggleDeleteModal() {
        const modal = document.getElementById('deleteModal');
        modal.classList.toggle('hidden');
    }
</script>

{% endblock %}
