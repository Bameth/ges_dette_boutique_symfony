{% extends 'base.html.twig' %}

{% block title %}Gestion des Clients{% endblock %}

{% block body %}
<div class="container mx-auto p-6">
    <div class="bg-white shadow-xl rounded-lg p-8 max-w-lg mx-auto mt-10">
        <h1 class="text-4xl font-bold text-blue-600 text-center mb-6">Enregistrement d'un Client</h1>
        
        <form method="POST" action="{{ path('clients.store') }}">
            {{ form_start(formDette) }}
            
            <!-- Champs du formulaire client -->
            <div class="space-y-4">
                {{ form_widget(formClient) }}
            </div>

            <!-- Toggle switch pour afficher le formulaire utilisateur -->
            <div class="mt-6 flex items-center">
                <span class="text-gray-700 mr-3">Créer un utilisateur pour ce client</span>
                <label class="relative inline-flex items-center cursor-pointer">
                    <input type="checkbox" id="toggleUser" name="toggleUser" class="sr-only" />
                    <div class="toggle-bg bg-gray-200 w-11 h-6 rounded-full shadow-inner"></div>
                    <div class="toggle-dot absolute w-5 h-5 bg-white rounded-full shadow transform transition duration-300 ease-in-out"></div>
                </label>
            </div>

            <!-- Champs du formulaire utilisateur (cachés au départ) -->
            <div id="userForm" class="mt-4 hidden">
                <div class="space-y-4">
                    {{ form_widget(formUser) }}
                </div>
            </div>

            <!-- Affichage des erreurs -->
            <div class="mt-4">
                {% for error in formUser.vars.errors %}
                    <div class="text-red-500">{{ error.message }}</div>
                {% endfor %}
                {% for error in formClient.vars.errors %}
                    <div class="text-red-500">{{ error.message }}</div>
                {% endfor %}
            </div>

            <!-- Bouton submit -->
            <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md transition duration-150 ease-in-out shadow-lg hover:shadow-xl mt-5">
                Enregistrer
            </button>

            {{ form_end(formClient) }}
        </form>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.getElementById('toggleUser').addEventListener('change', function() {
            const userForm = document.getElementById('userForm');
            if (this.checked) {
                userForm.classList.remove('hidden');
            } else {
                userForm.classList.add('hidden');
            }
        });
    });
</script>

<style>
    /* Style du toggle switch */
    .toggle-bg {
        transition: background-color 0.2s;
    }
    #toggleUser:checked + .toggle-bg {
        background-color: #4CAF50;
    }
    #toggleUser:checked + .toggle-bg + .toggle-dot {
        transform: translateX(100%);
    }
    .toggle-dot {
        transition: transform 0.2s;
    }
</style>
{% endblock %}
